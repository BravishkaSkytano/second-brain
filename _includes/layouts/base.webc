<!doctype html>
<html :lang="$data.metadata.language">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title @text="title + ' ~ ' + $data.metadata.title"></title>
    <meta
      name="description"
      :content="description || $data.metadata.description"
    />

    <meta name="generator" :content="eleventy.generator" />

    <!-- Ghibli : 'Amaranth' -->
    <link
      webc:keep
      href="https://fonts.googleapis.com/css2?family=Amaranth:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />
    <!-- Luxury : 'Archivo' -->
    <link
      webc:keep
      href="https://fonts.googleapis.com/css?family=Archivo:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />

    <script webc:keep @raw="getBundle('js', 'head')"></script>

    <link webc:keep rel="stylesheet" href="css/styles.css" />
    <style webc:keep @raw="getBundle('css')"></style>
  </head>
  <body class="flex min-h-screen flex-col">
    <navbar></navbar>
    <div class="flex flex-1">
      <sidebar></sidebar>
      <!-- Content -->
      <main class="flex-1 px-4 pt-10" @raw="content"></main>
    </div>
    <site-footer></site-footer>

    <script webc:keep src="js/flyonui.js"></script>
    <script type="module" webc:keep :src="getBundleFileUrl('js')"></script>
  </body>
</html>
